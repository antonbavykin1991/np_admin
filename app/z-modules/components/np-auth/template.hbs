<div class="login-content">
  <!-- Login -->
  <div class="lc-block toggled" id="l-login">
    <form class="lcb-form" {{action 'signIn' email password on='submit'}}>
      <div class="input-group m-b-20">
        <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
        <div class="fg-line">
          {{input type="text" class="form-control" placeholder="Email" value=email}}
        </div>
      </div>

      <div class="input-group m-b-20">
        <span class="input-group-addon"><i class="zmdi zmdi-male"></i></span>
        <div class="fg-line">
          {{input type="password" class="form-control" placeholder="Password" value=password}}
        </div>
      </div>

      <button type="submit" class="btn btn-login btn-default btn-float waves-effect waves-circle waves-float">
        <i class="zmdi zmdi-arrow-forward"></i>
      </button>
    </form>
  </div>
</div>