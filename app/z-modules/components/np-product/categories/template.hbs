<div class="card">
  <div class="card-body card-padding">
    <form role="form" {{action createCategory on="submit"}}>
      <div class="form-group fg-line">
        <label for="categoryName">Название категории</label>
        {{input type="text" value=name class="form-control input-sm" id="categoryName" placeholder="Название категории"}}
      </div>

      <button type="submit" class="btn btn-default btn-sm m-t-10 waves-effect">
        {{#if categoryId}}
          Сохранить
        {{else}}
          Добавить
        {{/if}}
      </button>

      {{#if categoryId}}
        <button {{action clearForm on="click"}} class="btn btn-default btn-sm m-t-10 waves-effect">Отмена</button>
      {{/if}}
    </form>
  </div>
</div>